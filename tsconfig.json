{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "dist",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule" : true,
        "strictNullChecks": true,
        "esModuleInterop": true,
         "moduleResolution": "node",
         "sourceMap": true,
         "downlevelIteration": true
      },
    "include": [
        "**/*",
        "eslint.config.js"
    ],
    "exclude": [
        "node_modules",
        "dist/"
    ]
}