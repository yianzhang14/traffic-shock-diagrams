{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "declaration": false,
        "strict": true,
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "production",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule" : true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es6"
         ],
         "moduleResolution": "node",
         "sourceMap": true
      },
    "include": [
        "**/*",
        "src/maintainers/*",
        ".eslintrc.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "temp.*",
        "production/*"
    ]
}